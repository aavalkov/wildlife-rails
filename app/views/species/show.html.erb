<div class='container'>
  <h1>Wildlife Tracker</h1>
  <hr>
<div class = 'col-md-6'>
  <h3><%= @species.name %>
  <form action="/species/<%= @species.id %>/delete/" method="post">
    <input name="_method" type="hidden" value="delete">
    <button class="btn btn-danger btn-xs">delete</button>
    <a href="/species/<%= @species.id %>/edit/" class="btn btn-warning btn-xs">edit</a>
  </form>
  </h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Date</td>
        <td>Latitude</td>
        <td>Longitude</td>
      </tr>
    </thead>
    <tbody>

      <% @sightings.sort.each do |sighting| %>
        <tr>
          <td><%= sighting.date %></td>
          <td><%= sighting.latitude %></td>
          <td><%= sighting.longitude %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class = 'col-md-6'>
</div>
</div>

